{
  "name": "My VIT",
  "version": "2.0.0",
  "manifest_version": 2,
  "description": "Minimalistic port of the My VIT app for the web",
  "icons": {
    "16": "assets/images/icon-16.png",
    "128": "assets/images/icon-128.png"
  },
  "content_security_policy": "script-src 'self' https://myffcs.in:10443/campus/vellore/; object-src 'self'",
  "background": {
    "scripts": [
      "scripts/jquery.js",
      "scripts/underscore-min.js",
      "scripts/background.js"
    ]
  },
  "content_scripts": [
    {
      "all_frames":true,
      "matches": ["*://vtop.vit.ac.in/student/coursepage_plan_view.asp*"],
      "css": ["styles/course_inject.css"],
      "js": ["scripts/jquery.js","scripts/iframeResizer.min.js","scripts/coursePage.js"]

    },
    {
      "all_frames":true,
      "matches": ["*://vtop.vit.ac.in/student/stud_menu.asp*"],
      "js": ["scripts/jquery.js"]
    }
  ],
  "web_accessible_resources": ["course_page/index.html"],
  "permissions": [
    "storage",
    "notifications",
    "https://myffcs.in:10443/campus/vellore/",
    "<all_urls>"
  ],
  "browser_action": {
    "default_icon": {
      "19": "assets/images/icon-19.png",
      "38": "assets/images/icon-38.png"
    },
    "default_title": "My VIT",
    "default_popup": "popup.html"
  }
}