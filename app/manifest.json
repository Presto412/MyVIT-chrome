{
  "name": "My VIT",
  "version": "2.0.0",
  "manifest_version": 2,
  "description": "Minimalistic port of the My VIT app for the web",
  "icons": {
    "16": "assets/images/icon-16.png",
    "128": "assets/images/icon-128.png"
  },
  "content_security_policy": "script-src 'self' https://myffcs.in:10443/campus/vellore/; object-src 'self'",
  "background": {
    "scripts": [
      "scripts/jquery.js",
      "scripts/underscore-min.js",
      "scripts/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": ["*://vtop.vit.ac.in/student/stud_login.asp"],
      "js": ["scripts/captcha.js"]
    },
    {
      "all_frames":true,
      "matches": ["*://vtop.vit.ac.in/student/coursepage_plan_view.asp?sem*"],
      "js": ["scripts/jquery.js","course_page/myCoursePage.js"]

    },
    {
      "all_frames":true,
      "matches": ["*://vtop.vit.ac.in/student/coursepage_plan_view.asp*"],
      "css": ["course_page/course_inject.css","/styles/materialize.css"],
      "js": ["scripts/jquery.js","scripts/materialize.min.js","course_page/view.js"]
    },
    {
      "all_frames":true,
      "matches": ["*://vtop.vit.ac.in/student/coursepage_plan_display.asp*"],
      "css": ["course_page/course_inject.css","/styles/materialize.css","/styles/animate.css"],
      "js": ["scripts/jquery.js","scripts/materialize.min.js","scripts/filesize.min.js","scripts/download.js","scripts/zip.js","scripts/deflate.js","course_page/display.js"]
    },
    {
      "all_frames":true,
      "matches": ["*://vtop.vit.ac.in/student/stud_menu.asp*"],
      "js": ["scripts/jquery.js","menu/navigator.js"]
    },
    {
      "all_frames":true,
      "matches": ["*://vtop.vit.ac.in/student/content.asp*"],
      "js": ["scripts/jquery.js"]
    },
    {
      "all_frames":true,
      "run_at":"document_start",
      "matches": ["*://vtop.vit.ac.in/student/home.asp"],
      "js": ["home/script.js"]
    },
    {
      "all_frames":true,
      "matches": ["*://vtop.vit.ac.in/student/home.asp*"],
      "css": ["/styles/materialize.css"],
      "js": ["scripts/jquery.js","scripts/materialize.min.js","home/navigation.js"]
    },
    {
      "all_frames":true,
      "matches": ["*://vtop.vit.ac.in/student/marks_da.asp*"],
      "css": ["/styles/materialize.css","course_page/course_inject.css"],
      "js": ["scripts/jquery.js","scripts/materialize.min.js","cal/marks_da.js"]
    },
    {
      "all_frames":true,
      "matches": ["*://vtop.vit.ac.in/student/leave_request.asp*"],
      "css": ["/styles/materialize.css","hosteller/leave_request.css"],
      "js": ["scripts/jquery.js","scripts/materialize.min.js","hosteller/leave_request.js"]
    },
    {
      "all_frames":true,
      "matches": ["*://vtop.vit.ac.in/student/marks_da_process.asp*","*://vtop.vit.ac.in/student/marks_pjt_process.asp*","*://vtop.vit.ac.in/student/marks_da_details.asp*","*://vtop.vit.ac.in/student/exam_schedule.asp*"],
      "css": ["/styles/materialize.css","course_page/course_inject.css"],
      "js": ["scripts/jquery.js","scripts/materialize.min.js","cal/marks_da_process.js"]
    },
    {
      "all_frames":true,
      "matches": ["*://vtop.vit.ac.in/student/marks.asp*"],
      "css": ["/styles/materialize.css","course_page/course_inject.css"],
      "js": ["scripts/jquery.js","scripts/materialize.min.js","marks/script.js"]
    },
    {
      "all_frames":true,
      "matches": ["*://vtop.vit.ac.in/student/fac_profile.asp"],
      "css": ["/styles/materialize.css","/styles/animate.css"],
      "js": ["scripts/jquery.js","scripts/materialize.min.js","faculty_search/script.js"]
    },
    {
      "all_frames":true,
      "run_at":"document_idle",
      "matches": ["*://vtop.vit.ac.in/student/*"],
      "js": ["scripts/jquery.js","preloader/autoUnload.js"]
    }
  ],
  "web_accessible_resources": [
    "scripts/jquery.js",
    "home/script.js",
    "home/side-menu.js",
    "menu/inject.js",
    "main/index.html",
    "assets/images/*",
    "assets/fac.min.json",
    "styles/commons.css",
    "fonts/*"
  ],
  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "notifications",
    "https://myffcs.in:10443/campus/vellore/",
    "<all_urls>",
    "webRequestBlocking",
    "webRequest",
    "*://*/*"
  ],
  "browser_action": {
    "default_icon": {
      "19": "assets/images/icon-19.png",
      "38": "assets/images/icon-38.png"
    },
    "default_title": "My VIT",
    "default_popup": "popup.html"
  }
}