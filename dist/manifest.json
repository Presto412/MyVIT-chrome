{
	"name": "My VIT",
	"version": "0.0.2",
	"manifest_version": 2,
	"description": "Minimalistic port of the My VIT app for the web",
	"icons": {
		"16": "images/icon-16.png",
		"128": "images/icon-128.png"
	},
	"content_scripts": [
		{
			"js": [
				"scripts/jquery.js",
				"scripts/popup.js"
			],
			"matches": [
				"http://*/*",
				"https://*/*"
			]
		}
	],
	"content_security_policy": "script-src 'self' http://myffcs.in:8080/campus/vellore/login; object-src 'self'",
	"default_locale": "en",
	"background": {
		"scripts": [
			"scripts/background.js"
		]
	},
	"permissions": [
		"http://myffcs.in:8080/campus/vellore/login",
		"<all_urls>"
	],
	"browser_action": {
		"default_icon": {
			"19": "images/icon-19.png",
			"38": "images/icon-38.png"
		},
		"default_title": "My VIT",
		"default_popup": "popup.html"
	}
}